{
  "name": "inspectioneering/taskrunner",
  "description": "Run all of your project's recurring tasks through a single PHP script instead of having to create endless cron jobs.",
  "license": "MIT",
  "keywords": [
    "CRON"
  ],
  "authors": [
    {
      "name": "Nick Schmoyer",
      "email": "nschmoyer@inspectioneering.com"
    }
  ],
  "require": {
    "symfony/yaml": ">=2.8",
    "symfony/console": ">=2.8",
    "mtdowling/cron-expression": "^1.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.0"
  },
  "autoload": {
    "psr-4": { "Inspectioneering\\TaskRunner\\": "src" },
    "exclude-from-classmap": [
      "/tests/"
    ]
  },
  "bin": [
    "bin/taskrunner"
  ]
}
